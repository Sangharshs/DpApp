<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ImageActivity">
    <com.google.android.gms.ads.AdView
        android:layout_marginTop="3dp"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ads"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout

        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/horizontal_images"
        android:id="@+id/linear"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                app:cardElevation="5dp"
                android:id="@+id/download_btn"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:background="@drawable/downward"
                    android:layout_height="50dp">

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                app:cardElevation="5dp"
                android:id="@+id/share_fb"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:background="@drawable/ic"
                    android:layout_height="50dp">

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                android:id="@+id/share_insta"
                app:cardElevation="5dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:background="@drawable/insta"
                    android:layout_height="50dp">

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                android:id="@+id/share_wh"
                app:cardElevation="5dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:background="@drawable/wh"
                    android:layout_height="50dp">

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                android:id="@+id/share_share"
                app:cardElevation="5dp"
                android:focusable="true"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:background="@drawable/sh"
                    android:layout_gravity="center"
                    android:layout_height="40dp">

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>